---
import Layout from '../layouts/Layout.astro';
import ButtonLink from '../components/button/ButtonLink.astro';
---

<Layout
  title="404: Page Not Found"
  metaDescription="The page you're looking for doesn't exist."
>
  <div class="error-container">
    <h1>404</h1>
    <h2>Page Not Found</h2>
    <p>Oops! The page you're looking for doesn't exist.</p>
    <ButtonLink link="/" variant="primary">Go Back Home</ButtonLink>
  </div>
</Layout>

<style lang="scss">
  .error-container {
    margin-top: var(--header-height);
    text-align: center;
    padding: 0 20px;

    h1 {
      font-size: 6rem;
      margin-bottom: 0;
      color: var(--accent);
    }

    h2 {
      font-size: 2rem;
      margin-top: 0;
      margin-bottom: 1rem;
    }

    p {
      margin-bottom: 2rem;
    }
  }
</style>
