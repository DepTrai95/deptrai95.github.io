---
interface Props {
  id?: string;
  name?: string;
  labelText?: string;
  required?: boolean;
}

const { id = '', name = '', labelText = '', required = false } = Astro.props;
---

<div class="form-group">
  <div class="form-label">
    <label for={id}>
      {labelText}
      {
        required && (
          <abbr title="required" class="form-require">
            *
          </abbr>
        )
      }
    </label>
  </div>
  <input class="form-control" type="text" name={name} id={id} />
</div>

<style lang="scss">
  @import '../../styles/_form.scss';
</style>
